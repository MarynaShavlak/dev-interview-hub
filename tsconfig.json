{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",

        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "jsx": "react-jsx",

        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,

        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
